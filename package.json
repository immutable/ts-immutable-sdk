{
  "name": "ts-immutable-sdk",
  "description": "Immutable Unified TypeScript SDK",
  "version": "0.0.0",
  "author": "Immutable",
  "bugs": "https://github.com/immutable/ts-immutable-sdk/issues",
  "devDependencies": {
    "@release-it-plugins/workspaces": "^3.2.0",
    "@release-it/keep-a-changelog": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "node-gyp": "^9.3.1",
    "release-it": "^15.10.1",
    "syncpack": "^9.8.4",
    "wsrun": "^5.2.4"
  },
  "engines": {
    "node": ">=16.11.0"
  },
  "homepage": "https://github.com/immutable/ts-immutable-sdk#readme",
  "license": "Apache-2.0",
  "lint-staged": {
    "*": "yarn scan:secrets",
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "packageManager": "yarn@3.5.0",
  "private": true,
  "repository": "immutable/ts-immutable-sdk.git",
  "resolutions": {
    "@biom3/design-tokens": "0.1.5-beta"
  },
  "scripts": {
    "build": "wsrun -p @imtbl/sdk -p @imtbl/checkout-widgets-lib -e -r --stages build && yarn syncpack:format && yarn wsrun -p @imtbl/sdk -a -m copyBrowserBundles",
    "build:all": "wsrun --stages build",
    "lint": "wsrun --exclude-missing -e lint --no-error-on-unmatched-pattern",
    "lint:ci": "./lint-ci.sh",
    "postinstall": "husky install; ./.husky/install_gitleaks.sh",
    "release": "release-it",
    "scan:secrets": "gitleaks protect --staged -v",
    "syncpack:check": "yarn syncpack list-mismatches",
    "syncpack:fix": "yarn syncpack fix-mismatches",
    "syncpack:format": "yarn syncpack format",
    "test": "wsrun --exclude-missing -e test",
    "typecheck": "wsrun --exclude-missing typecheck"
  },
  "workspaces": [
    "sdk",
    "packages/config",
    "packages/immutablex_client",
    "packages/passport",
    "packages/provider",
    "packages/provider/src/sample-app",
    "packages/orderbook",
    "packages/internal/toolkit",
    "packages/internal/cryptofiat",
    "packages/internal/dex/sdk",
    "packages/internal/dex/sdk-sample-app",
    "packages/internal/bridge/sdk",
    "packages/internal/guardian",
    "packages/internal/bridge/bridge-sample-app",
    "packages/internal/multi-rollup-api-client",
    "packages/checkout/sdk",
    "packages/checkout/sdk-sample-app",
    "packages/checkout/widgets",
    "packages/checkout/widgets-sample-app",
    "packages/checkout/widgets-lib",
    "packages/economy/sdk",
    "packages/economy/playground",
    "packages/economy/services"
  ]
}
