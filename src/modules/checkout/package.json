{
  "name": "imx-checkout-sdk",
  "version": "0.0.1",
  "description": "multi package manager for CheckoutSDK and the Sample App",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:sdk": "cd packages/sdk && jest",
    "test:cypress": "cd packages/ui && NODE_ENV=test cypress run --component --headless",
    "test:cypress:open": "cd packages/ui && NODE_ENV=test cypress open --component --browser electron",
    "test:coverage": "jest --coverage",
    "start": "lerna run --parallel start",
    "bootstrap": "npm install && lerna bootstrap --force-local"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/immutable/imx-checkout-sdk.git"
  },
  "author": "proletesseract",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/immutable/imx-checkout-sdk/issues"
  },
  "homepage": "https://github.com/immutable/imx-checkout-sdk#readme",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@cypress/webpack-preprocessor": "^5.17.0",
    "@parcel/packager-ts": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/jest": "^29.4.0",
    "babel-jest": "^29.4.3",
    "cypress": "^12.7.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "lerna": "^6.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
