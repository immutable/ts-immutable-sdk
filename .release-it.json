{
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "requireCleanWorkingDir": false,
    "requireBranch": false,
    "requireUpstream": false,
    "requireCommits": false,
    "commit": false,
    "push": false
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true,
    "allowSameVersion": true
  },
  "plugins": {
    "@release-it-plugins/workspaces": {
      "workspaces": ["sdk"],
      "publish": true,
      "distTag": "legacy"
    }
  }
}
